apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: demo
spec:
  selector:
    matchLabels:
      app: demo
  template:
    metadata:
      labels:
        app: demo
    spec:
      securityContext:
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      containers:
      - name: demo
        securityContext:
          allowPrivilegeEscalation: false
          capabilities:
            drop:
            - ALL
        image: "{{ demo_image }}"
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: demo
labels:
  app: demo
spec:
  selector:
    app: demo
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8080
{% if discovered_openshift_release is version('4.15', '>=') %}
  ipFamilyPolicy: PreferDualStack
{% endif %}
